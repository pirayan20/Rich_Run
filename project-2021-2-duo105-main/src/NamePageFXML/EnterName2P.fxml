<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NamePageFXML.ControlName">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1120.0" pickOnBounds="true">
         <image>
            <Image url="@../../res/homeBackground.png" />
         </image>
      </ImageView>
      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1120.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label alignment="TOP_LEFT" layoutX="134.0" prefHeight="70.0" prefWidth="592.0" text="Enter Your Name" textAlignment="CENTER" textFill="#eeeaea">
               <font>
                  <Font name="Berlin Sans FB" size="60.0" />
               </font>
               <VBox.margin>
                  <Insets left="100.0" top="90.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="112.0" prefWidth="1100.0">
               <children>
                  <Label prefHeight="89.0" prefWidth="133.0" text="Player 1 " textFill="#8ba8f5">
                     <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="player1name" alignment="CENTER" prefHeight="49.0" prefWidth="445.0" promptText="Enter Player 1 Name" style="-fx-background-radius: 12; -fx-border-color: black; -fx-border-radius: 12; -fx-border-width: 2;">
                     <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="35.0" />
               </padding>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="72.0" prefWidth="1260.0">
               <children>
                  <Label prefHeight="89.0" prefWidth="133.0" text="Player 2" textFill="#f08585">
                     <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="player2name" alignment="CENTER" prefHeight="49.0" prefWidth="445.0" promptText="Enter Player 2 Name" style="-fx-background-radius: 12; -fx-border-color: black; -fx-border-radius: 12; -fx-border-width: 2;">
                     <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="25.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" />
            <HBox alignment="TOP_CENTER" />
            <HBox alignment="CENTER_RIGHT" prefHeight="78.0" prefWidth="2410.0">
               <children>
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#goToGamePage" prefHeight="44.0" prefWidth="130.0" style="-fx-background-color: rgb(240, 133, 133); -fx-background-radius: 18; -fx-border-color: rgb(133, 34, 34); -fx-border-width: 2; -fx-border-radius: 18;" text="CONFIRM">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Berlin Sans FB" size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#goToHomePage" prefHeight="45.0" prefWidth="100.0" style="-fx-background-color: rgb(175, 232, 195); -fx-background-radius: 18; -fx-border-color: rgb(54, 114, 57); -fx-border-width: 2; -fx-border-radius: 18;" text="BACK">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                     <font>
                        <Font name="Berlin Sans FB" size="20.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets left="2.0" right="100.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="100.0" top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
